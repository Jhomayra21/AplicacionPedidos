@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg" style="border-radius: 15px; overflow: hidden; border: none;">
                <div class="card-header text-center py-4" style="background-color: #4E4259; color: white;">
                    <h3 class="mb-0"><i class="fas fa-lock me-2"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4" style="background-color: #F2F2F7;">
                    <form method="post" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-group mb-4">
                            <label for="email" class="form-label" style="color: #4E4259;"><i class="fas fa-envelope me-2"></i>Email:</label>
                            <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="ejemplo@correo.com" required 
                                   style="border-radius: 10px; border-color: #E1DBE6;" />
                        </div>
                        
                        <div class="form-group mb-4">
                            <label for="password" class="form-label" style="color: #4E4259;"><i class="fas fa-key me-2"></i>Contraseña:</label>
                            <input type="password" id="password" name="password" class="form-control form-control-lg" required 
                                   style="border-radius: 10px; border-color: #E1DBE6;" />
                        </div>
                        
                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-lg" style="background-color: #6D5A7C; color: white; border-radius: 10px;">
                                <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3" style="background-color: #E1DBE6; color: #4E4259;">
                    <div class="mb-0">
                        <i class="fas fa-info-circle me-2"></i> Credenciales por defecto:
                    </div>
                    <div class="row g-0 mt-2">
                        <div class="col-6">
                            <div class="p-2 border-end" style="border-color: #9D8AA8 !important;">
                                <strong>Email:</strong><br />
                                admin@pedidos.com
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2">
                                <strong>Password:</strong><br />
                                admin123
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none" style="color: #6D5A7C;">
                    <i class="fas fa-arrow-left me-2"></i> Volver al inicio
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}