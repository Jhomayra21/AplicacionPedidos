@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card text-center border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-5x text-danger mb-3"></i>
                        <h4>No tiene permisos para acceder a esta página</h4>
                        <p class="text-muted">
                            El recurso al que intenta acceder requiere permisos que su cuenta no tiene.
                        </p>
                    </div>
                    
                    <div class="d-grid gap-2 col-md-6 mx-auto">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-home"></i> Ir a la página de inicio
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt"></i> Iniciar sesión con otra cuenta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>