@model IEnumerable<Pedidos.Models.UserModel>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0" style="color: #4E4259;">
            <i class="fas fa-users me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Usuario
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="background-color: #E1DBE6; border-color: #D0C6D8; color: #4E4259;">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null || ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@(TempData["Error"] ?? ViewBag.Error)
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Estadísticas rápidas -->
    <div class="row mb-4 g-3">
        <div class="col-md-4">
            <div class="card border-0" style="background: linear-gradient(135deg, #6D5A7C, #9D8AA8); color: white; border-radius: 15px;">
                <div class="card-body text-center py-3">
                    <i class="fas fa-user-shield fa-2x mb-2"></i>
                    <h3 class="mb-0">@Model.Count(u => u.Rol == "admin")</h3>
                    <small>Administradores</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0" style="background: linear-gradient(135deg, #4E4259, #6D5A7C); color: white; border-radius: 15px;">
                <div class="card-body text-center py-3">
                    <i class="fas fa-user-tie fa-2x mb-2"></i>
                    <h3 class="mb-0">@Model.Count(u => u.Rol == "empleado")</h3>
                    <small>Empleados</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0" style="background: linear-gradient(135deg, #575E54, #9D8AA8); color: white; border-radius: 15px;">
                <div class="card-body text-center py-3">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h3 class="mb-0">@Model.Count(u => u.Rol == "cliente")</h3>
                    <small>Clientes</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla moderna mejorada -->
    <div class="card border-0 shadow-sm" style="border-radius: 15px; overflow: hidden;">
        <div class="card-header border-0" style="background: linear-gradient(135deg, #2B2B35, #4E4259); color: white; padding: 1.5rem;">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-table me-2"></i>Usuarios Registrados (@Model.Count())
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-light" onclick="exportTable()">
                        <i class="fas fa-download me-1"></i>Exportar
                    </button>
                    <button class="btn btn-sm btn-outline-light" onclick="refreshTable()">
                        <i class="fas fa-sync me-1"></i>Actualizar
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 modern-table">
                        <thead>
                            <tr style="background-color: #F8F9FA;">
                                <th class="border-0 py-3 px-4" style="color: #4E4259; font-weight: 600;">
                                    <i class="fas fa-user me-2"></i>@Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th class="border-0 py-3 px-4" style="color: #4E4259; font-weight: 600;">
                                    <i class="fas fa-envelope me-2"></i>@Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th class="border-0 py-3 px-4" style="color: #4E4259; font-weight: 600;">
                                    <i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(model => model.Rol)
                                </th>
                                <th class="border-0 py-3 px-4 text-center" style="color: #4E4259; font-weight: 600;">
                                    <i class="fas fa-cogs me-2"></i>Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="user-row" style="transition: all 0.3s ease;">
                                    <td class="py-3 px-4 border-0" style="border-bottom: 1px solid #E9ECEF;">
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar me-3" 
                                                 style="width: 40px; height: 40px; border-radius: 50%; 
                                                        background: linear-gradient(135deg, #6D5A7C, #9D8AA8); 
                                                        display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
                                                @item.Nombre.FirstOrDefault()
                                            </div>
                                            <div>
                                                <div class="fw-semibold" style="color: #2B2B35;">@item.Nombre</div>
                                                <small class="text-muted">Usuario registrado</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3 px-4 border-0" style="border-bottom: 1px solid #E9ECEF;">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-at me-2" style="color: #9D8AA8;"></i>
                                            <span style="color: #4E4259;">@item.Email</span>
                                        </div>
                                    </td>
                                    <td class="py-3 px-4 border-0" style="border-bottom: 1px solid #E9ECEF;">
                                        @{
                                            string badgeClass = "";
                                            string badgeIcon = "";
                                            string badgeBg = "";
                                            
                                            switch (item.Rol)
                                            {
                                                case "admin":
                                                    badgeClass = "admin-badge";
                                                    badgeIcon = "fas fa-crown";
                                                    badgeBg = "#4E4259";
                                                    break;
                                                case "empleado":
                                                    badgeClass = "employee-badge";
                                                    badgeIcon = "fas fa-user-tie";
                                                    badgeBg = "#6D5A7C";
                                                    break;
                                                default:
                                                    badgeClass = "client-badge";
                                                    badgeIcon = "fas fa-user";
                                                    badgeBg = "#9D8AA8";
                                                    break;
                                            }
                                        }
                                        <span class="badge @badgeClass" 
                                              style="background-color: @badgeBg; color: white; padding: 8px 15px; 
                                                     border-radius: 20px; font-weight: 500; font-size: 0.85rem;">
                                            <i class="@badgeIcon me-1"></i>
                                            @item.Rol.ToUpper()
                                        </span>
                                    </td>
                                    <td class="py-3 px-4 border-0 text-center" style="border-bottom: 1px solid #E9ECEF;">
                                        <div class="btn-group shadow-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-sm action-btn" 
                                               style="background-color: #E1DBE6; color: #4E4259; border: none; padding: 8px 12px; border-radius: 8px 0 0 8px;" 
                                               title="Ver Detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm action-btn" 
                                               style="background-color: #9D8AA8; color: white; border: none; padding: 8px 12px; margin-left: 1px;" 
                                               title="Editar Usuario">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm action-btn" 
                                               style="background-color: #4E4259; color: white; border: none; padding: 8px 12px; border-radius: 0 8px 8px 0; margin-left: 1px;" 
                                               title="Eliminar Usuario"
                                               onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x mb-3" style="color: #E1DBE6;"></i>
                    <h4 style="color: #4E4259;">No hay usuarios registrados</h4>
                    <p class="text-muted mb-4">Comienza agregando el primer usuario al sistema.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Crear Primer Usuario
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
.modern-table tbody tr:hover {
    background-color: #F8F9FA;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.action-btn {
    transition: all 0.3s ease;
}

.action-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.user-avatar {
    transition: all 0.3s ease;
}

.user-row:hover .user-avatar {
    transform: scale(1.1);
}

.admin-badge, .employee-badge, .client-badge {
    transition: all 0.3s ease;
}

.admin-badge:hover, .employee-badge:hover, .client-badge:hover {
    transform: scale(1.05);
}
</style>

<script>
function exportTable() {
    alert('Función de exportar próximamente disponible');
}

function refreshTable() {
    location.reload();
}
</script>