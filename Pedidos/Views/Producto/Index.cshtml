@model IEnumerable<Pedidos.Models.ProductoModel>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filtros de búsqueda -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-search"></i> Filtros de Búsqueda</h5>
        </div>
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="searchString">Buscar por nombre o descripción:</label>
                            <input type="text" class="form-control" name="searchString" value="@ViewBag.SearchString" placeholder="Nombre o descripción..." />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="minPrice">Precio mínimo:</label>
                            <input type="number" class="form-control" name="minPrice" value="@ViewBag.MinPrice" step="0.01" min="0" placeholder="0.00" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="maxPrice">Precio máximo:</label>
                            <input type="number" class="form-control" name="maxPrice" value="@ViewBag.MaxPrice" step="0.01" min="0" placeholder="999999.99" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-undo"></i> Limpiar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Crear Nuevo Producto
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Descripcion))
                            {
                                @(item.Descripcion.Length > 50 ? item.Descripcion.Substring(0, 50) + "..." : item.Descripcion)
                            }
                            else
                            {
                                <em class="text-muted">Sin descripción</em>
                            }
                        </td>
                        <td>
                            <span class="fw-bold text-success">$@Html.DisplayFor(modelItem => item.Precio)</span>
                        </td>
                        <td>
                            <span class="badge @(item.Stock > 10 ? "bg-success" : item.Stock > 0 ? "bg-warning" : "bg-danger")">
                                @Html.DisplayFor(modelItem => item.Stock) unidades
                            </span>
                        </td>
                        <td>
                            @if (item.Stock > 0)
                            {
                                <span class="badge bg-success">Disponible</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Agotado</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No hay productos registrados</h4>
            <p>No se encontraron productos en el sistema.</p>
            <hr>
            <p class="mb-0">
                <a asp-action="Create" class="btn btn-primary">Crear el primer producto</a>
            </p>
        </div>
    }
</div>