@model IEnumerable<Pedidos.Models.OrdenModel>

@{
    ViewData["Title"] = "Lista de Órdenes";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Crear Nueva Orden
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Orden #</th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>#@item.Id</strong>
                        </td>
                        <td>
                            @if (item.Cliente != null)
                            {
                                <div>
                                    <strong>@item.Cliente.Nombre</strong>
                                    <br><small class="text-muted">@item.Cliente.Email</small>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">Cliente no encontrado</span>
                            }
                        </td>
                        <td>
                            <div>
                                @item.Fecha.ToString("dd/MM/yyyy")
                                <br><small class="text-muted">@item.Fecha.ToString("HH:mm")</small>
                            </div>
                        </td>
                        <td>
                            <span class="badge @(item.Estado == "Pendiente" ? "bg-warning" : 
                                              item.Estado == "Procesado" ? "bg-info" : 
                                              item.Estado == "Enviado" ? "bg-primary" : 
                                              item.Estado == "Entregado" ? "bg-success" : "bg-secondary")">
                                @item.Estado
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-info">
                                @item.Items.Count productos
                            </span>
                            @if (item.Items.Any())
                            {
                                <br><small class="text-muted">@item.Items.Sum(i => i.Cantidad) unidades</small>
                            }
                        </td>
                        <td>
                            <span class="fw-bold text-success">$@item.Total.ToString("F2")</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                @if (item.Estado == "Pendiente")
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No hay órdenes registradas</h4>
            <p>No se encontraron órdenes en el sistema.</p>
            <hr>
            <p class="mb-0">
                <a asp-action="Create" class="btn btn-primary">Crear la primera orden</a>
            </p>
        </div>
    }

    <!-- Estadísticas resumidas -->
    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@Model.Count()</h5>
                        <p class="card-text">Total Órdenes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-warning">@Model.Count(o => o.Estado == "Pendiente")</h5>
                        <p class="card-text">Pendientes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-success">@Model.Count(o => o.Estado == "Entregado")</h5>
                        <p class="card-text">Entregadas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title text-info">$@Model.Sum(o => o.Total).ToString("F2")</h5>
                        <p class="card-text">Total Ventas</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>