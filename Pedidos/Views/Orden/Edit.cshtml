@model Pedidos.Models.OrdenModel

@{
    ViewData["Title"] = "Editar Orden";
}

<div class="container">
    <h1>@ViewData["Title"] #@Model.Id</h1>

    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group mb-3">
                    <label for="ClienteId" class="control-label">Cliente</label>
                    <select asp-for="ClienteId" class="form-control" required>
                        @if (ViewBag.Clientes != null)
                        {
                            @foreach (var cliente in (List<Pedidos.Models.UserModel>)ViewBag.Clientes)
                            {
                                <option value="@cliente.Id" selected="@(cliente.Id == Model.ClienteId)">
                                    @cliente.Nombre - @cliente.Email
                                </option>
                            }
                        }
                    </select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input asp-for="Fecha" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                    <div class="form-text">Fecha y hora de la orden</div>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Estado" class="control-label"></label>
                    <select asp-for="Estado" class="form-control">
                        <option value="Pendiente">Pendiente</option>
                        <option value="Procesado">Procesado</option>
                        <option value="Enviado">Enviado</option>
                        <option value="Entregado">Entregado</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Total" class="control-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Total" class="form-control" type="number" step="0.01" readonly />
                    </div>
                    <span asp-validation-for="Total" class="text-danger"></span>
                    <div class="form-text">El total se calcula automáticamente basado en los productos</div>
                </div>
                
                <div class="form-group mb-3">
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Ver Detalles</a>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Información de la Orden</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> #@Model.Id</p>
                    <p><strong>Fecha de creación:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Estado actual:</strong> 
                        <span class="badge @(Model.Estado == "Pendiente" ? "bg-warning" : 
                                          Model.Estado == "Procesado" ? "bg-info" : 
                                          Model.Estado == "Enviado" ? "bg-primary" : 
                                          Model.Estado == "Entregado" ? "bg-success" : "bg-secondary")">
                            @Model.Estado
                        </span>
                    </p>
                    <p><strong>Total actual:</strong> 
                        <span class="h5 text-success">$@Model.Total.ToString("F2")</span>
                    </p>
                    
                    <hr>
                    
                    <h6>Cambios de estado:</h6>
                    <div class="timeline">
                        <small>
                            <ul class="list-unstyled">
                                <li><span class="badge bg-warning">Pendiente</span> ? <span class="badge bg-info">Procesado</span></li>
                                <li><span class="badge bg-info">Procesado</span> ? <span class="badge bg-primary">Enviado</span></li>
                                <li><span class="badge bg-primary">Enviado</span> ? <span class="badge bg-success">Entregado</span></li>
                            </ul>
                        </small>
                    </div>
                </div>
            </div>
            
            <div class="card mt-3">
                <div class="card-header">
                    <h5><i class="fas fa-exclamation-triangle"></i> Notas Importantes</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-info-circle text-info"></i> El total se recalcula automáticamente</li>
                        <li><i class="fas fa-warning text-warning"></i> Cambiar el cliente no afecta los productos</li>
                        <li><i class="fas fa-clock text-primary"></i> La fecha puede ajustarse según necesidades</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}