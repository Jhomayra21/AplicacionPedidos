@model Pedidos.Models.OrdenModel

@{
    ViewData["Title"] = "Mi Carrito";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0" style="color: #4E4259;">@ViewData["Title"]</h1>
        <a asp-action="CatalogoProductos" class="btn" style="background-color: #6D5A7C; color: white;">
            <i class="fas fa-shopping-basket me-2"></i>Seguir Comprando
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="background-color: #E1DBE6; border-color: #D0C6D8; color: #4E4259;">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="alert" role="alert" style="background-color: #E1DBE6; border-color: #D0C6D8; color: #4E4259;">
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-4x mb-3"></i>
                <h4>Su carrito está vacío</h4>
                <p class="mb-4">Agregue productos para comenzar a comprar.</p>
                <a asp-action="CatalogoProductos" class="btn" style="background-color: #6D5A7C; color: white;">
                    <i class="fas fa-shopping-basket me-2"></i>Ver Productos Disponibles
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card" style="border-color: #9D8AA8; border-radius: 10px; overflow: hidden;">
                    <div class="card-header" style="background-color: #6D5A7C; color: white;">
                        <i class="fas fa-shopping-cart me-2"></i>Productos en su Carrito
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead style="background-color: #E1DBE6;">
                                    <tr>
                                        <th>Producto</th>
                                        <th class="text-center">Precio</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-center">Subtotal</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <h6 class="mb-0">@item.Producto?.Nombre</h6>
                                                        <small class="text-muted">
                                                            @if (item.Producto?.Descripcion?.Length > 50)
                                                            {
                                                                @(item.Producto.Descripcion.Substring(0, 47) + "...")
                                                            }
                                                            else
                                                            {
                                                                @item.Producto?.Descripcion
                                                            }
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <span class="fw-bold" style="color: #4E4259;">$@item.Producto?.Precio.ToString("F2")</span>
                                            </td>
                                            <td class="align-middle">
                                                <form asp-action="ActualizarCantidad" method="post" class="d-flex justify-content-center">
                                                    <input type="hidden" name="itemId" value="@item.Id" />
                                                    <div class="input-group" style="max-width: 120px;">
                                                        <button class="btn btn-outline-secondary" type="button" onclick="decrementarCantidad(@item.Id)">
                                                            <i class="fas fa-minus"></i>
                                                        </button>
                                                        <input type="number" id="cantidad_@item.Id" name="cantidad" min="1" max="@item.Producto?.Stock" 
                                                               value="@item.Cantidad" class="form-control text-center" onchange="this.form.submit()">
                                                        <button class="btn btn-outline-secondary" type="button" onclick="incrementarCantidad(@item.Id, @item.Producto?.Stock)">
                                                            <i class="fas fa-plus"></i>
                                                        </button>
                                                    </div>
                                                </form>
                                            </td>
                                            <td class="text-center align-middle">
                                                <span class="fw-bold" style="color: #4E4259;">$@item.Subtotal.ToString("F2")</span>
                                            </td>
                                            <td class="text-center align-middle">
                                                <form asp-action="EliminarItem" method="post">
                                                    <input type="hidden" name="itemId" value="@item.Id" />
                                                    <button type="submit" class="btn btn-sm" style="background-color: #4E4259; color: white;" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card" style="border-color: #9D8AA8; border-radius: 10px; overflow: hidden;">
                    <div class="card-header" style="background-color: #6D5A7C; color: white;">
                        <i class="fas fa-receipt me-2"></i>Resumen del Pedido
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal:</span>
                            <span class="fw-bold">$@Model.Total.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Envío:</span>
                            <span class="text-success">Gratis</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5">Total:</span>
                            <span class="h5" style="color: #4E4259;">$@Model.Total.ToString("F2")</span>
                        </div>
                        <div class="d-grid">
                            <a asp-action="Finalizar" class="btn btn-lg" style="background-color: #4E4259; color: white;">
                                <i class="fas fa-check me-2"></i>Finalizar Compra
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card mt-3" style="border-color: #E1DBE6; border-radius: 10px;">
                    <div class="card-body">
                        <h6 class="card-title" style="color: #4E4259;"><i class="fas fa-info-circle me-2"></i>Información</h6>
                        <ul class="mb-0 ps-3">
                            <li>Los pedidos se procesan en horario laboral</li>
                            <li>Envío gratis en todas las órdenes</li>
                            <li>Tiempo estimado de entrega: 2-5 días hábiles</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.ProductosDisponibles != null && ((List<Pedidos.Models.ProductoModel>)ViewBag.ProductosDisponibles).Any())
    {
        <div class="mt-5">
            <h3 style="color: #4E4259;">Productos Recomendados</h3>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mt-2">
                @foreach (var producto in ((List<Pedidos.Models.ProductoModel>)ViewBag.ProductosDisponibles).Take(4))
                {
                    <div class="col">
                        <div class="card h-100" style="border-radius: 10px; overflow: hidden; border-color: #E1DBE6;">
                            <div class="card-header" style="background-color: #9D8AA8; color: white;">
                                <h6 class="card-title mb-0">@producto.Nombre</h6>
                            </div>
                            <div class="card-body">
                                <p class="card-text small">
                                    @(producto.Descripcion?.Length > 80 ? producto.Descripcion.Substring(0, 77) + "..." : producto.Descripcion)
                                </p>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="fw-bold" style="color: #4E4259;">$@producto.Precio.ToString("F2")</span>
                                    <form asp-action="AgregarProducto" method="post">
                                        <input type="hidden" name="productoId" value="@producto.Id" />
                                        <input type="hidden" name="cantidad" value="1" />
                                        <button type="submit" class="btn btn-sm" style="background-color: #6D5A7C; color: white;">
                                            <i class="fas fa-cart-plus me-1"></i> Agregar
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function decrementarCantidad(itemId) {
            var inputCantidad = document.getElementById('cantidad_' + itemId);
            var valorActual = parseInt(inputCantidad.value);
            if (valorActual > 1) {
                inputCantidad.value = valorActual - 1;
                inputCantidad.form.submit();
            }
        }

        function incrementarCantidad(itemId, stockMaximo) {
            var inputCantidad = document.getElementById('cantidad_' + itemId);
            var valorActual = parseInt(inputCantidad.value);
            if (valorActual < stockMaximo) {
                inputCantidad.value = valorActual + 1;
                inputCantidad.form.submit();
            }
        }
    </script>
}