@model Pedidos.Models.OrdenModel

@{
    ViewData["Title"] = "Detalle del Pedido #" + Model.Id;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0" style="color: #4E4259;">@ViewData["Title"]</h1>
        <a asp-action="MisPedidos" class="btn" style="background-color: #9D8AA8; color: white;">
            <i class="fas fa-arrow-left me-2"></i>Volver a Mis Pedidos
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card" style="border-color: #9D8AA8; border-radius: 10px; overflow: hidden;">
                <div class="card-header" style="background-color: #6D5A7C; color: white;">
                    <i class="fas fa-shopping-bag me-2"></i>Productos en su Pedido
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead style="background-color: #E1DBE6;">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Precio</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div>
                                                    <h6 class="mb-0">@item.Producto?.Nombre</h6>
                                                    <small class="text-muted">
                                                        @if (item.Producto?.Descripcion?.Length > 50)
                                                        {
                                                            @(item.Producto.Descripcion.Substring(0, 47) + "...")
                                                        }
                                                        else
                                                        {
                                                            @item.Producto?.Descripcion
                                                        }
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="fw-bold" style="color: #4E4259;">$@item.Producto?.Precio.ToString("F2")</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            @item.Cantidad
                                        </td>
                                        <td class="text-end align-middle">
                                            <span class="fw-bold" style="color: #4E4259;">$@item.Subtotal.ToString("F2")</span>
                                        </td>
                                    </tr>
                                }
                                <tr style="background-color: #F2F2F7;">
                                    <td colspan="3" class="text-end fw-bold">Total:</td>
                                    <td class="text-end fw-bold" style="color: #4E4259;">$@Model.Total.ToString("F2")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card" style="border-color: #9D8AA8; border-radius: 10px; overflow: hidden;">
                <div class="card-header" style="background-color: #6D5A7C; color: white;">
                    <i class="fas fa-info-circle me-2"></i>Información del Pedido
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 style="color: #4E4259;">Número de Orden:</h6>
                        <p class="mb-0">#@Model.Id</p>
                    </div>
                    <div class="mb-3">
                        <h6 style="color: #4E4259;">Fecha de Pedido:</h6>
                        <p class="mb-0">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="mb-3">
                        <h6 style="color: #4E4259;">Estado:</h6>
                        @{
                            var badgeBg = Model.Estado == "Pendiente" ? "#B69FBA" :
                                Model.Estado == "Procesado" ? "#9D8AA8" :
                                Model.Estado == "Enviado" ? "#6D5A7C" :
                                Model.Estado == "Entregado" ? "#575E54" : "#4E4259";
                            
                            var icon = Model.Estado == "Pendiente" ? "clock" :
                                Model.Estado == "Procesado" ? "cog" :
                                Model.Estado == "Enviado" ? "truck" :
                                Model.Estado == "Entregado" ? "check-circle" : "info-circle";
                            
                            var statusMessage = Model.Estado == "Pendiente" ? "Su pedido está siendo revisado" :
                                Model.Estado == "Procesado" ? "Su pedido está siendo preparado" :
                                Model.Estado == "Enviado" ? "Su pedido está en camino" :
                                Model.Estado == "Entregado" ? "Su pedido ha sido entregado" : "Estado desconocido";
                        }
                        <div class="mb-2">
                            <span class="badge" style="background-color: @badgeBg; color: white; padding: 6px 10px;">
                                <i class="fas fa-@icon me-1"></i> @Model.Estado
                            </span>
                        </div>
                        <p class="mb-0 small">@statusMessage</p>
                    </div>
                    <div class="mb-0">
                        <h6 style="color: #4E4259;">Cliente:</h6>
                        <p class="mb-0">@Model.Cliente?.Nombre</p>
                        <p class="mb-0">@Model.Cliente?.Email</p>
                    </div>
                </div>
            </div>

            <div class="card mt-3" style="border-color: #E1DBE6; border-radius: 10px;">
                <div class="card-header" style="background-color: #E1DBE6; color: #4E4259;">
                    <i class="fas fa-truck me-2"></i>Información de Entrega
                </div>
                <div class="card-body">
                    <p class="mb-0">Entrega estándar (2-5 días hábiles)</p>
                    
                    @if (Model.Estado == "Pendiente")
                    {
                        <div class="alert alert-info mt-3 mb-0" style="background-color: #E1DBE6; border-color: #D0C6D8; color: #4E4259;">
                            Su pedido está siendo preparado. Recibirá una actualización cuando sea enviado.
                        </div>
                    }
                    else if (Model.Estado == "Procesado")
                    {
                        <div class="alert alert-info mt-3 mb-0" style="background-color: #E1DBE6; border-color: #D0C6D8; color: #4E4259;">
                            Su pedido está empacado y listo para envío.
                        </div>
                    }
                    else if (Model.Estado == "Enviado")
                    {
                        <div class="alert alert-info mt-3 mb-0" style="background-color: #E1DBE6; border-color: #D0C6D8; color: #4E4259;">
                            Su pedido está en camino. Estará llegando en los próximos días.
                        </div>
                    }
                    else if (Model.Estado == "Entregado")
                    {
                        <div class="alert alert-success mt-3 mb-0" style="background-color: #E1DBE6; border-color: #D0C6D8; color: #4E4259;">
                            Su pedido ha sido entregado. ¡Gracias por su compra!
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="CatalogoProductos" class="btn btn-lg" style="background-color: #6D5A7C; color: white;">
                    <i class="fas fa-shopping-basket me-2"></i>Seguir Comprando
                </a>
            </div>
        </div>
    </div>
</div>