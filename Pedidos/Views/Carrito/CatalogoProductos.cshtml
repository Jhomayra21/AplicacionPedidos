@model IEnumerable<Pedidos.Models.ProductoModel>

@{
    ViewData["Title"] = "Catálogo de Productos";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0" style="color: #4E4259;">@ViewData["Title"]</h1>
        <div>
            <a asp-action="Index" class="btn" style="background-color: #6D5A7C; color: white;">
                <i class="fas fa-shopping-cart me-2"></i>Ver Carrito
            </a>
            <a asp-action="MisPedidos" class="btn ms-2" style="background-color: #4E4259; color: white;">
                <i class="fas fa-box me-2"></i>Mis Pedidos
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="background-color: #E1DBE6; border-color: #D0C6D8; color: #4E4259;">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filtros de búsqueda -->
    <div class="card mb-4" style="border-color: #9D8AA8; border-radius: 10px;">
        <div class="card-header" style="background-color: #6D5A7C; color: white;">
            <i class="fas fa-search me-2"></i>Filtrar productos
        </div>
        <div class="card-body">
            <form asp-action="CatalogoProductos" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchString" class="form-label">Nombre o descripción</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #E1DBE6;"><i class="fas fa-search"></i></span>
                        <input type="text" id="searchString" name="searchString" class="form-control" placeholder="Buscar..." value="@ViewBag.SearchString" />
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="minPrice" class="form-label">Precio mínimo</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #E1DBE6;">$</span>
                        <input type="number" step="0.01" min="0" id="minPrice" name="minPrice" class="form-control" placeholder="0.00" value="@ViewBag.MinPrice" />
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="maxPrice" class="form-label">Precio máximo</label>
                    <div class="input-group">
                        <span class="input-group-text" style="background-color: #E1DBE6;">$</span>
                        <input type="number" step="0.01" min="0" id="maxPrice" name="maxPrice" class="form-control" placeholder="Cualquier precio" value="@ViewBag.MaxPrice" />
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn w-100" style="background-color: #4E4259; color: white;">
                        <i class="fas fa-filter me-2"></i>Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert" role="alert" style="background-color: #E1DBE6; color: #4E4259; border-color: #D0C6D8;">
            <div class="text-center py-4">
                <i class="fas fa-search fa-3x mb-3"></i>
                <h4>No se encontraron productos</h4>
                <p>No hay productos disponibles que coincidan con los criterios de búsqueda.</p>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100" style="border-radius: 10px; overflow: hidden; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                        <div class="card-header" style="background-color: #6D5A7C; color: white; position: relative;">
                            <h5 class="card-title mb-0 pe-5">@producto.Nombre</h5>
                            @{
                                string stockClass = producto.Stock > 10 ? "bg-success" : producto.Stock > 5 ? "bg-warning" : "bg-danger";
                                string stockText = producto.Stock > 10 ? "En stock" : producto.Stock > 5 ? "Stock bajo" : "Últimas unidades";
                            }
                            <span class="position-absolute top-0 end-0 badge @stockClass m-2">@stockText</span>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="card-text flex-grow-1" style="color: #2B2B35;">
                                @(producto.Descripcion?.Length > 100 ? producto.Descripcion.Substring(0, 97) + "..." : producto.Descripcion)
                            </p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="h5 fw-bold mb-0" style="color: #4E4259;">$@producto.Precio.ToString("F2")</span>
                                <span class="badge" style="background-color: #9D8AA8; color: white;">
                                    <i class="fas fa-box me-1"></i>@producto.Stock disponibles
                                </span>
                            </div>
                        </div>
                        <div class="card-footer" style="background-color: #F2F2F7;">
                            <form asp-action="AgregarProducto" method="post" class="row g-2">
                                <input type="hidden" name="productoId" value="@producto.Id" />
                                <div class="col-5">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text" style="background-color: #E1DBE6;">Cant.</span>
                                        <input type="number" name="cantidad" min="1" max="@producto.Stock" value="1" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-7">
                                    <button type="submit" class="btn btn-sm w-100" style="background-color: #6D5A7C; color: white;">
                                        <i class="fas fa-cart-plus me-1"></i>Agregar al Carrito
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>