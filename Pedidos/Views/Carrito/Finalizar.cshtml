@model Pedidos.Models.OrdenModel

@{
    ViewData["Title"] = "Finalizar Compra";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0" style="color: #4E4259;">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn" style="background-color: #9D8AA8; color: white;">
            <i class="fas fa-arrow-left me-2"></i>Volver al Carrito
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card" style="border-color: #9D8AA8; border-radius: 10px; overflow: hidden;">
                <div class="card-header" style="background-color: #6D5A7C; color: white;">
                    <i class="fas fa-shopping-bag me-2"></i>Detalles del Pedido
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead style="background-color: #E1DBE6;">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Precio</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div>
                                                    <h6 class="mb-0">@item.Producto?.Nombre</h6>
                                                    <small class="text-muted">
                                                        @if (item.Producto?.Descripcion?.Length > 50)
                                                        {
                                                            @(item.Producto.Descripcion.Substring(0, 47) + "...")
                                                        }
                                                        else
                                                        {
                                                            @item.Producto?.Descripcion
                                                        }
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="fw-bold" style="color: #4E4259;">$@item.Producto?.Precio.ToString("F2")</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            @item.Cantidad
                                        </td>
                                        <td class="text-end align-middle">
                                            <span class="fw-bold" style="color: #4E4259;">$@item.Subtotal.ToString("F2")</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card mt-4" style="border-color: #9D8AA8; border-radius: 10px; overflow: hidden;">
                <div class="card-header" style="background-color: #6D5A7C; color: white;">
                    <i class="fas fa-truck me-2"></i>Información de Entrega
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 style="color: #4E4259;">Cliente:</h6>
                        <p class="mb-0">@Model.Cliente?.Nombre</p>
                        <p class="mb-0">@Model.Cliente?.Email</p>
                    </div>
                    <div>
                        <h6 style="color: #4E4259;">Método de Entrega:</h6>
                        <p class="mb-0">Entrega estándar (2-5 días hábiles)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card" style="border-color: #9D8AA8; border-radius: 10px; overflow: hidden;">
                <div class="card-header" style="background-color: #6D5A7C; color: white;">
                    <i class="fas fa-receipt me-2"></i>Resumen del Pedido
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Subtotal:</span>
                        <span class="fw-bold">$@Model.Total.ToString("F2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Envío:</span>
                        <span class="text-success">Gratis</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="h5">Total:</span>
                        <span class="h5" style="color: #4E4259;">$@Model.Total.ToString("F2")</span>
                    </div>
                    <form asp-action="ConfirmarPedido" method="post">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-lg" style="background-color: #4E4259; color: white;">
                                <i class="fas fa-check-circle me-2"></i>Confirmar Pedido
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-3" style="border-color: #E1DBE6; border-radius: 10px;">
                <div class="card-body">
                    <h6 class="card-title" style="color: #4E4259;"><i class="fas fa-info-circle me-2"></i>Información de Pago</h6>
                    <p class="mb-0">El pago se realizará contra entrega.</p>
                </div>
            </div>

            <div class="card mt-3" style="border-color: #E1DBE6; border-radius: 10px;">
                <div class="card-body">
                    <h6 class="card-title" style="color: #4E4259;"><i class="fas fa-shield-alt me-2"></i>Compra Segura</h6>
                    <p class="mb-0">Sus datos están protegidos y su pedido será procesado de manera segura.</p>
                </div>
            </div>
        </div>
    </div>
</div>