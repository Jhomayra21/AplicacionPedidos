@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div style="background-color: #2B2B35; border-radius: 10px; box-shadow: 0 8px 16px rgba(0,0,0,0.1); padding: 2rem; color: white;">
                <h1 class="display-4 fw-bold" style="color: #E1DBE6;">Sistema de Pedidos</h1>
                <p class="lead">Administra tus productos y órdenes con nuestra plataforma elegante y funcional.</p>
                <hr class="my-4" style="background-color: #6D5A7C;">
                <p>Accede a todas las funcionalidades con tu cuenta o contacta al administrador para más información.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
                    @if (User.IsInRole("admin") || User.IsInRole("empleado"))
                    {
                        <a asp-controller="Producto" asp-action="Index" class="btn btn-primary btn-lg px-4 me-md-2">
                            <i class="fas fa-box me-2"></i>Ver Productos
                        </a>
                        <a asp-controller="Orden" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                            <i class="fas fa-receipt me-2"></i>Gestionar Pedidos
                        </a>
                    }
                    else if (User.IsInRole("cliente"))
                    {
                        <a asp-controller="Producto" asp-action="Index" class="btn btn-primary btn-lg px-4 me-md-2">
                            <i class="fas fa-box me-2"></i>Ver Productos
                        </a>
                        <a asp-controller="Orden" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                            <i class="fas fa-receipt me-2"></i>Ver Pedidos
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-4 me-md-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                @if (User.IsInRole("admin") || User.IsInRole("empleado"))
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="border-color: #6D5A7C; border-radius: 10px;">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-users fa-3x" style="color: #6D5A7C;"></i>
                                </div>
                                <h5 class="card-title">Usuarios</h5>
                                <p class="card-text">Administra las cuentas de clientes y empleados.</p>
                                <a asp-controller="User" asp-action="Index" class="btn btn-sm" style="background-color: #6D5A7C; color: white;">
                                    Acceder <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="border-color: #4E4259; border-radius: 10px;">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-box fa-3x" style="color: #4E4259;"></i>
                                </div>
                                <h5 class="card-title">Productos</h5>
                                <p class="card-text">Gestiona tu inventario y precios.</p>
                                <a asp-controller="Producto" asp-action="Index" class="btn btn-sm" style="background-color: #4E4259; color: white;">
                                    Acceder <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="border-color: #9D8AA8; border-radius: 10px;">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-receipt fa-3x" style="color: #9D8AA8;"></i>
                                </div>
                                <h5 class="card-title">Pedidos</h5>
                                <p class="card-text">Crea y gestiona órdenes de compra.</p>
                                <a asp-controller="Orden" asp-action="Index" class="btn btn-sm" style="background-color: #9D8AA8; color: white;">
                                    Acceder <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="border-color: #575E54; border-radius: 10px;">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-chart-line fa-3x" style="color: #575E54;"></i>
                                </div>
                                <h5 class="card-title">Estadísticas</h5>
                                <p class="card-text">Visualiza el rendimiento de tus ventas.</p>
                                <button class="btn btn-sm" style="background-color: #575E54; color: white;" disabled>
                                    Próximamente <i class="fas fa-clock ms-1"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
                else if (User.IsInRole("cliente"))
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="border-color: #6D5A7C; border-radius: 10px;">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-box fa-3x" style="color: #6D5A7C;"></i>
                                </div>
                                <h5 class="card-title">Catálogo</h5>
                                <p class="card-text">Explora todos nuestros productos disponibles.</p>
                                <a asp-controller="Producto" asp-action="Index" class="btn btn-sm" style="background-color: #6D5A7C; color: white;">
                                    Ver Productos <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100" style="border-color: #4E4259; border-radius: 10px;">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-receipt fa-3x" style="color: #4E4259;"></i>
                                </div>
                                <h5 class="card-title">Mis Pedidos</h5>
                                <p class="card-text">Revisa el historial de tus pedidos.</p>
                                <a asp-controller="Orden" asp-action="Index" class="btn btn-sm" style="background-color: #4E4259; color: white;">
                                    Ver Pedidos <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mb-4">
                        <div class="card h-100" style="border-color: #575E54; border-radius: 10px;">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-headset fa-3x" style="color: #575E54;"></i>
                                </div>
                                <h5 class="card-title">Atención al Cliente</h5>
                                <p class="card-text">¿Necesitas ayuda con tu pedido? Contáctanos.</p>
                                <button class="btn btn-sm" style="background-color: #575E54; color: white;" disabled>
                                    Próximamente <i class="fas fa-clock ms-1"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-12 mb-4">
                        <div class="card" style="border-color: #6D5A7C; border-radius: 10px;">
                            <div class="card-body text-center py-5">
                                <div class="mb-3">
                                    <i class="fas fa-user-circle fa-4x" style="color: #6D5A7C;"></i>
                                </div>
                                <h3 class="card-title mb-3">Iniciar Sesión</h3>
                                <p class="card-text mb-4">Para acceder a todas las funcionalidades, por favor inicia sesión con tu cuenta.</p>
                                <a asp-controller="Account" asp-action="Login" class="btn" style="background-color: #6D5A7C; color: white; padding: 10px 30px;">
                                    <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div style="background-color: #E1DBE6; border-radius: 10px; padding: 2rem; text-align: center;">
                <h3 style="color: #4E4259;">Diseñado para simplificar tu negocio</h3>
                <p class="mb-0">Nuestro sistema te permite administrar todo tu inventario y pedidos en un solo lugar.</p>
            </div>
        </div>
    </div>
</div>
